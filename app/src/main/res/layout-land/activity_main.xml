<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.soka.inf4041_dereydellet_spanneut.MainActivity">

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarmTimePicker"
            android:layout_above="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:elevation="1dp"
            tools:headerAmPmTextAppearance="?attr/actionBarDivider" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moins"
            android:background="@android:drawable/btn_minus"
            android:onClick="dropClick"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plus"
            android:onClick="clickContact"
            android:background="@android:drawable/btn_plus"
            android:elevation="21dp"
            android:layout_below="@+id/moins"
            android:layout_toEndOf="@+id/buttonStart"
            android:layout_alignLeft="@+id/moins"
            android:layout_alignStart="@+id/moins" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStart"
            android:onClick="clickStart"
            android:layout_marginRight="96dp"
            android:layout_marginEnd="96dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/alarmTimePicker"
            android:layout_alignEnd="@+id/alarmTimePicker" />

    </RelativeLayout>

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker2"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:elevation="1dp"
        tools:headerAmPmTextAppearance="?attr/actionBarDivider" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:onClick="clickContact"
        android:background="@android:drawable/btn_plus"
        android:elevation="21dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ajout contact à débloquer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/alarmTimePicker"
        android:layout_alignLeft="@+id/plus"
        android:layout_alignStart="@+id/plus" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:onClick="clickStart"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="retirer contact de la liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonStart"
        android:layout_alignRight="@+id/moins"
        android:layout_alignEnd="@+id/moins"
        android:id="@+id/textView8"
        android:layout_below="@+id/alarmTimePicker" />

    <TextView
        android:text="veuillez sélectionner l'heure à laquelle vous voulez que ça se finisse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:background="@android:drawable/btn_minus"
        android:onClick="dropClick"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</LinearLayout>